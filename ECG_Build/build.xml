		<mkdir dir="dist/ecg" />

		<tstamp />

		<copy todir="dist/user.home">

			<fileset dir="../sensor.properties/" includes="sensor.properties" />

		</copy>

		<copy todir="dist/ecg">

			<fileset dir="../ECG_Lab/dist/application" />

		</copy>

		<mkdir dir="../ECG_EclipseSensor/ecg" />


		<copy todir="../ECG_EclipseSensor/ecg">

			<fileset dir="../ECG_Lab/dist/application" />

		</copy>


	</target>


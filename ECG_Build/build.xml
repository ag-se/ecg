	<!-- Generate the API documentation -->
	<target name="javadoc" depends="clean javadoc">

		<mkdir dir="${doc.dir}/images" />
			
		<copy todir="${doc.dir}/images">
		
			<fileset dir="images" />			
		</copy>
		

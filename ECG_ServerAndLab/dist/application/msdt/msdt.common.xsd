<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:annotation>
		<xs:documentation>
			This XML schema defines the data type "commonDataType" which must be
			used in all MicroSensorDataType schema declarations.
		</xs:documentation>
	</xs:annotation>

	<xs:complexType name="commonDataType">
   		<xs:sequence>
   			<xs:annotation>
				<xs:documentation>
					The "commonDataType" contains the name of the user that is currently working
					with the observed application and the name of the project this user works on.
				</xs:documentation>
			</xs:annotation>
   		
   			<xs:element name="username"/>
			<xs:element name="projectname"/>
		</xs:sequence>
	</xs:complexType>

</xs:schema>